@model IEnumerable<MVCClinica.Models.Medico>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <p>@Html.ActionLink("Create New", "Create", "Medico")</p>

    @using (Html.BeginForm("TraerPorEspecialidad", "Medico", FormMethod.Get))
    {
        @Html.TextBox("especialidad", null)
        <input type="submit" value="Get Por Especialidad" />
    } 
    
    @using (Html.BeginForm("TraerPorNombreCompleto", "Medico", FormMethod.Get))
    {
        @Html.TextBox("nombre", null)
        @Html.TextBox("apellido", null)
        <input type="submit" value="Get Por Nombre y Apellido" />
    }
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
            <th>@Html.DisplayNameFor(model => model.NroMatricula)</th>
            <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
            <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
            <th>Details</th>
            <th>Delete</th>
            <th>Edit</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Especialidad)</td>
                <td>@Html.DisplayFor(modelItem => item.NroMatricula)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                <td>@Html.DisplayFor(modelItem => item.Ciudad)</td>
                <td>
                    @Html.ActionLink("Detail", "Detail", new { id = item.MedicoId })
                </td>

                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.MedicoId })
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MedicoId })
                </td>

            </tr>
        }
    </table>

</body>
</html>
